- wrap_layout :layout do
  %p.home-link= link_to 'ホーム', '/'
  %article.entry
    %h1= current_article.title
    %p.meta
      %time= current_article.date.strftime('%Y/%m/%d')
    = preserve do
      = yield
    %p.meta
      %span.pull-right
        = link_to 'View on GitHub', current_article.source_file.gsub(/^.+\/([^\/]+)$/, 'https://github.com/ngsio/ja.ngs.io/blob/master/source/\1')
    .disqus= disqus